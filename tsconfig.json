{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "declaration": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "scripts"]
}
